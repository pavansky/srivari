// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Product {
  id          String   @id @default(uuid())
  name        String
  price       Float
  description String
  category    String
  stock       Int      @default(0)
  images      String[] // Array of image URLs
  video       String?
  isFeatured  Boolean  @default(false)
  priceCps    Float?
  shipping    Float?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Order {
  id                String   @id // Custom ID like SR-123456
  razorpay_order_id String?  @unique
  customer          Json     // Stores { name, email, phone, address }
  items             Json     // Stores array of OrderItem
  amount            Float
  shipping_cost     Float    @default(0)
  total             Float
  status            String   @default("Pending") // Pending, Paid, Shipped, Delivered, Cancelled
  payment_method    String   @default("Razorpay")
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt
}
